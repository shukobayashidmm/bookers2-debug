<h1>Follower Users</h1>
<% if @users.empty? %>
<span>ユーザーはいません</span>
<% else %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <table class="table">
      <thead>
        <tr>
         <th>image</th>
         <th>name</th>
        </tr>
      </thead>
     <tbody>
       <% @users.each do |users| %>
      <tr>
       <td><%= image_tag users.get_profile_image, size:'50x50' %></td>
       <td><%= users.name %></td>
       <td>フォロー数：<%= users.followings.count %></td>
       <td>フォロワー数：<%= users.followers.count %></td>
       <td><%= link_to "Show", user_path(users.id) %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
<% end %>
 </div>
</div>